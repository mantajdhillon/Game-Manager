<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeonCoopAchievement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bright_pink</item>
        <item name="colorPrimaryVariant">@color/bright_pink</item>
        <!-- colorOnPrimary -> used in toolbar text -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <!-- colorSecondary -> hyperlinks, accents -->
        <item name="colorSecondary">@color/light_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comic_neue_bold</item>
    </style>
</resources>